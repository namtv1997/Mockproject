<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Sprint5.eventDetail.EventDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:background="@color/blue_hope"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <ImageView
                android:id="@+id/btnEditEvent"
                android:padding="@dimen/dp_5"
                android:src="@drawable/content_ip"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <EditText

                android:layout_weight="1"
                android:id="@+id/tvTitleEventDetail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:enabled="false"
                android:background="@null"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center|left"
            android:text="Description"
            android:textSize="@dimen/dp_20" />

        <EditText
            android:id="@+id/tvDescriptionEventDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:enabled="false"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="@drawable/bg_stroke_hope"
            android:padding="@dimen/dp_5"
            android:text="@string/content_demo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center|left"
            android:text="Link Document"
            android:textSize="@dimen/dp_20" />

        <EditText
            android:id="@+id/linkDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:enabled="false"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="@drawable/bg_stroke_hope"
            android:padding="@dimen/dp_5"
            android:text="www.sang.com.vn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center|left"
            android:text="Speaker"
            android:textSize="@dimen/dp_20" />

        <EditText
            android:id="@+id/tvSpeakerDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:enabled="false"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="@drawable/bg_stroke_hope"
            android:padding="@dimen/dp_5"
            android:text="@string/www_sang_com_vn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center|left"
            android:text="@string/start_date"
            android:textSize="@dimen/dp_20" />

        <TextView
            android:id="@+id/tvStartDateDetailEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:enabled="false"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="@drawable/bg_stroke_hope"
            android:padding="@dimen/dp_5"
            android:text="@string/_2019_01_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center|left"
            android:text="@string/end_date"
            android:textSize="@dimen/dp_20" />

        <TextView
            android:id="@+id/tvEndDateDetailEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:enabled="false"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="@drawable/bg_stroke_hope"
            android:padding="@dimen/dp_5"
            android:text="@string/_2019_01_21" />
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <Button
                android:id="@+id/btnDeleteEvent"
                android:visibility="gone"
                android:layout_margin="@dimen/dp_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/red"
                android:text="@string/delete"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                tools:ignore="ButtonStyle" />
            <Button
                android:layout_marginRight="@dimen/dp_5"
                android:id="@+id/btnOK"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center"
                android:background="@drawable/bg_stroke_hope"
                android:text="@string/ok" />

            <Button
                android:id="@+id/btnAttendanceEvent"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/bg_stroke_hope"
                android:text="@string/attendance"
                android:visibility="gone" />

        </LinearLayout>

        <Button
            android:id="@+id/btnSaveDetailEvent"
            android:layout_width="200dp"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@drawable/bg_stroke_hope"
            android:text="@string/save"
            android:visibility="gone" />


    </LinearLayout>
</ScrollView>