<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    app:leftEdgeSwipeOffset="@dimen/dp_0"
    app:rightEdgeSwipeOffset="@dimen/dp_0">


    <LinearLayout
        android:id="@+id/layout_swipe_right"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_100"
        android:orientation="horizontal">
<FrameLayout
    android:layout_width="@dimen/dp_70"
    android:layout_height="@dimen/dp_100">
    <ImageView
        android:id="@+id/btnApprove"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_100"
        android:visibility="gone"

        android:padding="@dimen/dp_20"
        android:src="@drawable/ic_check" />
    <ImageView
        android:id="@+id/btnEditcontent"
        android:visibility="gone"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_100"
        android:background="@color/xanh_nhat_tron_suot"
        android:padding="@dimen/dp_20"
        android:src="@drawable/content_ip" />
</FrameLayout>


        <ImageView
            android:id="@+id/btnDeleteContent"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_100"
            android:background="#BEFF0000"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:visibility="gone"
            android:src="@drawable/delete_ip"
            android:textSize="15sp" />
    </LinearLayout>


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:background="@drawable/bg_bg_actionbar">

        <ImageView
            android:id="@+id/btnCreateEvent"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="@dimen/dp_40"
            android:src="@drawable/icon_create_event"
            android:visibility="gone" />



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:orientation="horizontal"
            android:weightSum="10">

            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/AvtContent"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_margin="@dimen/dp_5"
                android:background="@drawable/bg_avt_crcle"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="12">

                <TextView
                    android:id="@+id/tvTittle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_weight="3"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:maxLines="1"
                    android:text="@string/vietNamVoiDich"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20" />
                <TextView
                    android:id="@+id/tvUser"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_weight="3"
                    android:gravity="left|center"
                    android:maxLines="1"
                    android:text="@string/pham_xuan_sang"
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/tvDateCreate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_weight="3"
                    android:gravity="left|center"
                    android:text="@string/dateDemo"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:textColor="@color/white">

                    <TextView
                        android:id="@+id/tvStart"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="@string/start"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvDateStart"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:text="@string/start_date_demo"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvEnd"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="@string/end"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvDateEnd"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:text="@string/end_date_demo"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </FrameLayout>
</com.daimajia.swipe.SwipeLayout>