<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFF"
    android:layout_marginBottom="1dp"
    tools:context=".ListAttendance.AttendanceFragment">
<LinearLayout
    android:orientation="horizontal"
    android:background="#FFF"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_get_attendance"
            android:layout_width="@dimen/dp_0"
            android:layout_height="96dp"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_8"
            android:src="@mipmap/ic_launcher" />
        <CheckBox
            android:layout_marginLeft="@dimen/dp_16"
            android:id="@+id/cb_get_attendance"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="8"
            android:layoutDirection="rtl"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/dp_4"
            android:text="@string/pham_xuan_sang" />
</LinearLayout>

        <TextView
            android:id="@+id/edt_comment_attendance"
            style="@style/edt_comment_attendance_event"
            android:gravity="center_vertical"
            android:visibility="visible" />

        <TextView
            android:id="@+id/submitTextView"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            android:background="@drawable/shape_background_btn_done_content"
            android:text="@string/comment" />

</LinearLayout>