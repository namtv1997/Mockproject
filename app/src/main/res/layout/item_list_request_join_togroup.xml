<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:orientation="horizontal"
    android:background="@drawable/bg_bg_10dp"
    android:layout_margin="@dimen/dp_5"
    android:id="@+id/itemListRequest"
    tools:ignore="MissingDefaultResource">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_margin="@dimen/dp_5"
        android:id="@+id/avtMember"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50" />
    <LinearLayout
        android:weightSum="7"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvMemberName"
            android:textStyle="bold"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:text="Pham Xuan Sang"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/btnOk"
            android:padding="@dimen/dp_10"
            android:src="@drawable/member_ok"
            android:background="@color/blue_hope"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/btnDelete"
            android:background="@color/red"
            android:padding="@dimen/dp_10"
            android:src="@drawable/delete_ip"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>